    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "geist": "^1.7.0",
    "gsap": "^3.14.2",
    "lucide-react": "^0.564.0",
    "material-symbols": "^0.40.2",
    "motion": "^12.34.0",
    "next": "^16.1.6",
    "ogl": "^1.0.11",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-select": "^5.10.2",
    "resend": "^6.9.2",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.1",
    "zod": "^4.3.6"
